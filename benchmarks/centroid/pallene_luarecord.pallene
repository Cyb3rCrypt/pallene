
function new(x: float, y: float): {x:float, y:float}
    return { x = x, y = y }
end

function centroid(points: {{x:float, y:float}}, nrep: integer): {x:float, y:float}
    local x = 0.0
    local y = 0.0
    local npoints = #points
    for _ = 1, nrep do
        x = 0.0
        y = 0.0
        for i = 1, npoints do
            local p = points[i]
            x = x + p.x
            y = y + p.y
        end
    end
    return { x = x / npoints, y = y / npoints }
end
